        android:text="+1"
        app:layout_constraintBottom_toTopOf="@+id/plus13"
        app:layout_constraintEnd_toStartOf="@+id/reset2"
        app:layout_constraintStart_toEndOf="@+id/counter2"
        app:layout_constraintTop_toBottomOf="@+id/plus11" />

    <TextView
        android:id="@+id/counter2"
        android:layout_width="42dp"
        android:layout_height="21dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="99dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/counter3"
        app:layout_constraintEnd_toStartOf="@+id/plus12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counter1" />

    <Button
        android:id="@+id/plus14"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="176dp"
        android:backgroundTint="#4CAF50"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reset4"
        app:layout_constraintStart_toEndOf="@+id/counter4"
        app:layout_constraintTop_toBottomOf="@+id/plus13" />

    <Button
        android:id="@+id/reset2"
        android:layout_width="91dp"
        android:layout_height="48dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#FF9800"
        android:text="RESET"
        app:layout_constraintBottom_toTopOf="@+id/reset3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/plus12"
        app:layout_constraintTop_toBottomOf="@+id/reset1" />

    <Button
        android:id="@+id/resetAllButton"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="#F44336"
        android:text="RESET ALL"
        app:layout_constraintBottom_toTopOf="@+id/reset1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/counterAll"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/counter1"
        android:layout_width="42dp"
        android:layout_height="21dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="92dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/counter2"
        app:layout_constraintEnd_toStartOf="@+id/plus11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counterAll" />

    <TextView
        android:id="@+id/counterAll"
        android:layout_width="97dp"
        android:layout_height="54dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/resetAllButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/counter3"
        android:layout_width="42dp"
        android:layout_height="21dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="88dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/counter4"
        app:layout_constraintEnd_toStartOf="@+id/plus13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counter2" />

    <Button
        android:id="@+id/reset3"
        android:layout_width="91dp"
        android:layout_height="48dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#FF9800"
        android:text="RESET"
        app:layout_constraintBottom_toTopOf="@+id/reset4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plus13"
        app:layout_constraintTop_toBottomOf="@+id/reset2" />

</androidx.constraintlayout.widget.ConstraintLayout>
