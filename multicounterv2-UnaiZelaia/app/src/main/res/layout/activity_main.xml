<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/reset4"
        android:layout_width="91dp"
        android:layout_height="48dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="176dp"
        android:backgroundTint="#FF9800"
        android:text="RESET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plus14"
        app:layout_constraintTop_toBottomOf="@+id/reset3" />

    <Button
        android:id="@+id/reset1"
        android:layout_width="91dp"
        android:layout_height="48dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#FF9800"
        android:text="RESET"
        android:textColorHighlight="#FF9800"
        android:textColorLink="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/reset2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plus11"
        app:layout_constraintTop_toBottomOf="@+id/resetAllButton"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="#FF9800" />

    <Button
        android:id="@+id/plus11"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="79dp"
