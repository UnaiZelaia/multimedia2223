        app:layout_constraintBottom_toTopOf="@+id/plus12"
        app:layout_constraintEnd_toStartOf="@+id/reset1"
        app:layout_constraintStart_toEndOf="@+id/counter1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/counter4"
        android:layout_width="42dp"
        android:layout_height="21dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="189dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plus14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counter3" />

    <Button
        android:id="@+id/plus13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:backgroundTint="#4CAF50"
        android:text="+1"
        app:layout_constraintBottom_toTopOf="@+id/plus14"
        app:layout_constraintEnd_toStartOf="@+id/reset3"
        app:layout_constraintStart_toEndOf="@+id/counter3"
        app:layout_constraintTop_toBottomOf="@+id/plus12" />

    <Button
        android:id="@+id/plus12"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="72dp"
