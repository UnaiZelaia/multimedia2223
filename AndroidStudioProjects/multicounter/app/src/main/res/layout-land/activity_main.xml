        android:layout_height="48dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="46dp"
        android:backgroundTint="#FF9800"
        android:text="RESET"
        app:layout_constraintBottom_toTopOf="@+id/reset4"
        app:layout_constraintEnd_toEndOf="parent"
